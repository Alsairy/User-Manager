# ============================================================
# User-Manager Environment Configuration
# Copy this file to .env and fill in values
# ============================================================

# General
ASPNETCORE_ENVIRONMENT=Development

# Database (SQL Server)
MSSQL_SA_PASSWORD=YourStrong!Passw0rd

# JWT Authentication (MUST be >=32 characters)
JWT_SIGNING_KEY=CHANGE_ME_SUPER_SECRET_SIGNING_KEY_1234567890

# Seed Data
SEED_ENABLED=true
SEED_ADMIN_EMAIL=admin@madares.sa
SEED_ADMIN_PASSWORD=Admin123!

# CORS
CORS_ORIGIN=http://localhost:5173

# Email (SendGrid)
SENDGRID_API_KEY=
EMAIL_ENABLED=false

# Rate Limiting
RateLimiting__WindowSeconds=60
RateLimiting__GlobalPermitLimit=300
RateLimiting__AuthPermitLimit=20
RateLimiting__QueueLimit=0

# Request Limits
RequestLimits__MaxBodyBytes=20971520
RequestLimits__MaxMultipartBodyBytes=20971520
